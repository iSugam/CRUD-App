<%- include("partials/header") -%>
<%- include("nav") -%>

<div class="container">
    <div class="row mt-5">
        <% articles.forEach(article =>  { %>
                <div class="card col-2 mt-3 mx-3">
                    <div class="card-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <article class="card-text"><%=article.description%> </article>
                    <p class="card-subtitle mt-2 text-muted"><%= article.publishDate %></p>
                    <a href="/article/<%=article._id%>" class="btn btn-info mt-2"><i class="bi bi-pencil-square"></i></a>
                    <a href="#" class="btn btn-dark mt-2"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                </div>
        <% }) %>
    </div>
</div>
<%- include("partials/footer") -%>